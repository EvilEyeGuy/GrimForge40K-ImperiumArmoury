<?xml version="1.0" encoding="utf-8"?>
<Patch>

	<!-- Flak Jacket -->
	<Operation Class="PatchOperationRemove">
		<xpath>Defs/ThingDef[@Name="GF40K_FlakJacketBase"]/statBases/ArmorRating_Sharp</xpath>
	</Operation>

	<Operation Class="PatchOperationRemove">
		<xpath>Defs/ThingDef[@Name="GF40K_FlakJacketBase"]/statBases/ArmorRating_Blunt</xpath>
	</Operation>

	<Operation Class="PatchOperationRemove">
		<xpath>Defs/ThingDef[@Name="GF40K_FlakJacketBase"]/statBases/ArmorRating_Heat</xpath>
	</Operation>

	<Operation Class="PatchOperationAdd">
		<xpath>Defs/ThingDef[@Name="GF40K_FlakJacketBase"]/statBases</xpath>
		<value>
			<Bulk>5</Bulk>
			<WornBulk>2.5</WornBulk>
			<StuffEffectMultiplierArmor>4</StuffEffectMultiplierArmor>
			<ArmorRating_Sharp>2</ArmorRating_Sharp>
		</value>
	</Operation>

	<Operation Class="PatchOperationReplace">
		<xpath>Defs/ThingDef[@Name="GF40K_FlakJacketBase"]/statBases/MaxHitPoints</xpath>
		<value>
			<MaxHitPoints>255</MaxHitPoints>
		</value>
	</Operation>

	<Operation Class="PatchOperationReplace">
		<xpath>Defs/ThingDef[@Name="GF40K_FlakJacketBase"]/statBases/Mass</xpath>
		<value>
			<Mass>11</Mass>
		</value>
	</Operation>

	<Operation Class="PatchOperationAddModExtension">
		<xpath>Defs/ThingDef[@Name="GF40K_FlakJacketBase"]</xpath>
		<value>
			<li Class="CombatExtended.PartialArmorExt">
				<stats>
					<li>
						<ArmorRating_Sharp>0.80</ArmorRating_Sharp>
						<parts>
							<li>Neck</li>
						</parts>
					</li>
					<li>
						<ArmorRating_Blunt>0.80</ArmorRating_Blunt>
						<parts>
							<li>Neck</li>
						</parts>
					</li>
				</stats>
			</li>
		</value>
	</Operation>

	<!-- Change recipe to stuffed -->
	<Operation Class="PatchOperationAdd">
		<xpath>Defs/ThingDef[@Name="GF40K_FlakJacketBase"]</xpath>
		<value>
			<costStuffCount>90</costStuffCount>
		</value>
	</Operation>

	<Operation Class="PatchOperationAdd">
		<xpath>Defs/ThingDef[@Name="GF40K_FlakJacketBase"]</xpath>
		<value>
			<stuffCategories>
				<li>Steeled</li>
			</stuffCategories>
		</value>
	</Operation>

	<Operation Class="PatchOperationRemove">
		<xpath>Defs/ThingDef[defName="GF40K_FlakJacketBase"]/costList/Steel</xpath>
	</Operation>

	<Operation Class="PatchOperationRemove">
		<xpath>Defs/ThingDef[defName="GF40K_FlakJacketBase"]/costList/ComponentIndustrial</xpath>
	</Operation>

	<Operation Class="PatchOperationAdd">
		<xpath>Defs/ThingDef[defName="GF40K_Apparel_Commissar_Hat"]/statBases</xpath>
		<value>
			<StuffEffectMultiplierArmor>2</StuffEffectMultiplierArmor>
			<Bulk>1</Bulk>
			<WornBulk>1</WornBulk>
		</value>
	</Operation>

	<Operation Class="PatchOperationAdd">
		<xpath>Defs/ThingDef[defName="GF40K_Apparel_Commissar_Hat"]/equippedStatOffsets</xpath>
		<value>
			<Suppressability>-0.25</Suppressability>
		</value>
	</Operation>

	<!-- === Recon Armor Base === -->
	<Operation Class="PatchOperationAdd">
		<xpath>Defs/ThingDef[@Name="GF40K_ArmorReconBase"]/statBases</xpath>
		<value>
			<Bulk>5</Bulk>
			<WornBulk>3</WornBulk>
		</value>
	</Operation>

	<Operation Class="PatchOperationReplace">
		<xpath>Defs/ThingDef[@Name="GF40K_ArmorReconBase"]/statBases/MaxHitPoints</xpath>
		<value>
			<MaxHitPoints>350</MaxHitPoints>
		</value>
	</Operation>

	<Operation Class="PatchOperationReplace">
		<xpath>Defs/ThingDef[@Name="GF40K_ArmorReconBase"]/statBases/Mass</xpath>
		<value>
			<Mass>12</Mass>
		</value>
	</Operation>

	<Operation Class="PatchOperationReplace">
		<xpath>Defs/ThingDef[@Name="GF40K_ArmorReconBase"]/statBases/ArmorRating_Sharp</xpath>
		<value>
			<ArmorRating_Sharp>10</ArmorRating_Sharp>
		</value>
	</Operation>

	<Operation Class="PatchOperationReplace">
		<xpath>Defs/ThingDef[@Name="GF40K_ArmorReconBase"]/statBases/ArmorRating_Blunt</xpath>
		<value>
			<ArmorRating_Blunt>18</ArmorRating_Blunt>
		</value>
	</Operation>

	<!-- === Recon Helmet Base === -->
	<Operation Class="PatchOperationReplace">
		<xpath>Defs/ThingDef[@Name="GF40K_ArmorHelmetReconBase"]/statBases/StuffEffectMultiplierArmor</xpath>
		<value>
			<Bulk>4</Bulk>
			<WornBulk>1</WornBulk>
			<ArmorRating_Heat>0.54</ArmorRating_Heat>
		</value>
	</Operation>

	<Operation Class="PatchOperationReplace">
		<xpath>Defs/ThingDef[@Name="GF40K_ArmorHelmetReconBase"]/statBases/ArmorRating_Sharp</xpath>
		<value>
			<ArmorRating_Sharp>8</ArmorRating_Sharp>
		</value>
	</Operation>

	<Operation Class="PatchOperationReplace">
		<xpath>Defs/ThingDef[@Name="GF40K_ArmorHelmetReconBase"]/statBases/ArmorRating_Blunt</xpath>
		<value>
			<ArmorRating_Blunt>12</ArmorRating_Blunt>
		</value>
	</Operation>

	<Operation Class="PatchOperationReplace">
		<xpath>Defs/ThingDef[@Name="GF40K_ArmorHelmetReconBase"]/statBases/MaxHitPoints</xpath>
		<value>
			<MaxHitPoints>150</MaxHitPoints>
		</value>
	</Operation>

	<!-- === Marine Armor Base === -->
	<Operation Class="PatchOperationAdd">
		<xpath>Defs/ThingDef[@Name="GF40K_ArmorMarineBase"]/statBases</xpath>
		<value>
			<Bulk>80</Bulk>
			<WornBulk>12</WornBulk>
		</value>
	</Operation>

	<Operation Class="PatchOperationReplace">
		<xpath>Defs/ThingDef[@Name="GF40K_ArmorMarineBase"]/statBases/Mass</xpath>
		<value>
			<Mass>30</Mass>
		</value>
	</Operation>

	<Operation Class="PatchOperationAdd">
		<xpath>Defs/ThingDef[@Name="GF40K_ArmorMarineBase"]/statBases</xpath>
		<value>
			<ArmorRating_Sharp>16</ArmorRating_Sharp>
		</value>
	</Operation>

	<Operation Class="PatchOperationAdd">
		<xpath>Defs/ThingDef[@Name="GF40K_ArmorMarineBase"]/statBases</xpath>
		<value>
			<ArmorRating_Blunt>34</ArmorRating_Blunt>
		</value>
	</Operation>

	<Operation Class="PatchOperationRemove">
		<xpath>Defs/ThingDef[@Name="GF40K_ArmorMarineBase"]/equippedStatOffsets/MoveSpeed</xpath>
	</Operation>

	<Operation Class="PatchOperationAdd">
		<xpath>Defs/ThingDef[@Name="GF40K_ArmorMarineBase"]</xpath>
		<value>
			<equippedStatOffsets>
				<CarryWeight>50</CarryWeight>
				<CarryBulk>8</CarryBulk>
				<ToxicEnvironmentResistance>0.50</ToxicEnvironmentResistance>
				<MoveSpeed>0.4</MoveSpeed>
			</equippedStatOffsets>
		</value>
	</Operation>

	<!-- === Marine Helmet Base === -->
	<Operation Class="PatchOperationReplace">
		<xpath>Defs/ThingDef[@Name="GF40K_ArmorHelmetMarineBase"]/description</xpath>
		<value>
			<description>A high-tech armored helmet with a built-in status computer and a protective plasteel-weave plate.\n\nBuilt-in servo-motors assist the wearer's muscles in holding the weight of the helmet while the integrated combat HUD improves weapon accuracy.\n\nArmor like this is often used by imperial scout troops or glitterworld police forces.</description>
		</value>
	</Operation>

	<Operation Class="PatchOperationAddModExtension">
		<xpath>Defs/ThingDef[@Name="GF40K_ArmorHelmetMarineBase"]</xpath>
		<value>
			<li Class="CombatExtended.ApparelDefExtension">
				<isRadioPack>true</isRadioPack>
			</li>
		</value>
	</Operation>

	<Operation Class="PatchOperationAdd">
		<xpath>Defs/ThingDef[@Name="GF40K_ArmorHelmetMarineBase"]/statBases</xpath>
		<value>
			<Bulk>4</Bulk>
			<WornBulk>1</WornBulk>
			<NightVisionEfficiency_Apparel>0.7</NightVisionEfficiency_Apparel>
		</value>
	</Operation>

	<Operation Class="PatchOperationReplace">
		<xpath>Defs/ThingDef[@Name="GF40K_ArmorHelmetMarineBase"]/statBases/Flammability</xpath>
		<value>
			<Flammability>0.25</Flammability>
		</value>
	</Operation>

	<Operation Class="PatchOperationReplace">
		<xpath>Defs/ThingDef[@Name="GF40K_ArmorHelmetMarineBase"]/statBases/Mass</xpath>
		<value>
			<Mass>3.0</Mass>
		</value>
	</Operation>

	<Operation Class="PatchOperationReplace">
		<xpath>Defs/ThingDef[@Name="GF40K_ArmorHelmetMarineBase"]/statBases/MaxHitPoints</xpath>
		<value>
			<MaxHitPoints>190</MaxHitPoints>
		</value>
	</Operation>

	<Operation Class="PatchOperationReplace">
		<xpath>Defs/ThingDef[@Name="GF40K_ArmorHelmetMarineBase"]/statBases/ArmorRating_Sharp</xpath>
		<value>
			<ArmorRating_Sharp>12</ArmorRating_Sharp>
		</value>
	</Operation>

	<Operation Class="PatchOperationReplace">
		<xpath>Defs/ThingDef[@Name="GF40K_ArmorHelmetMarineBase"]/statBases/ArmorRating_Blunt</xpath>
		<value>
			<ArmorRating_Blunt>26</ArmorRating_Blunt>
		</value>
	</Operation>

	<Operation Class="PatchOperationAdd">
		<xpath>Defs/ThingDef[@Name="GF40K_ArmorHelmetMarineBase"]</xpath>
		<value>
			<equippedStatOffsets>
				<AimingAccuracy>0.15</AimingAccuracy>
				<ToxicEnvironmentResistance>0.50</ToxicEnvironmentResistance>
				<SmokeSensitivity>-1</SmokeSensitivity>
			</equippedStatOffsets>
		</value>
	</Operation>

	<Operation Class="PatchOperationReplace">
		<xpath>Defs/ThingDef[@Name="GF40K_ArmorHelmetMarineBase"]/costList/Plasteel</xpath>
		<value>
			<Plasteel>50</Plasteel>
			<DevilstrandCloth>15</DevilstrandCloth>
		</value>
	</Operation>

	<Operation Class="PatchOperationAdd">
		<xpath>Defs/ThingDef[@Name="GF40K_ArmorHelmetMarineBase"]/apparel</xpath>
		<value>
			<immuneToToxGasExposure>true</immuneToToxGasExposure>
		</value>
	</Operation>

	<Operation Class="PatchOperationAdd">
		<xpath>Defs/ThingDef[@Name="GF40K_ArmorHelmetMarineBase"]/apparel/layers</xpath>
		<value>
			<li>OnHead</li>
			<li>StrappedHead</li>
		</value>
	</Operation>

	<Operation Class="PatchOperationAddModExtension">
		<xpath>Defs/ThingDef[@Name="GF40K_ArmorHelmetMarineBase"]</xpath>
		<value>
			<li Class="CombatExtended.PartialArmorExt">
				<stats>
					<li>
						<ArmorRating_Sharp>0.70</ArmorRating_Sharp>
						<parts>
							<li>Eye</li>
						</parts>
					</li>
					<li>
						<ArmorRating_Blunt>0.70</ArmorRating_Blunt>
						<parts>
							<li>Eye</li>
						</parts>
					</li>
					<li>
						<ArmorRating_Sharp>0.50</ArmorRating_Sharp>
						<parts>
							<li>Nose</li>
							<li>Jaw</li>
						</parts>
					</li>
					<li>
						<ArmorRating_Blunt>0.50</ArmorRating_Blunt>
						<parts>
							<li>Nose</li>
							<li>Jaw</li>
						</parts>
					</li>
				</stats>
			</li>
		</value>
	</Operation>

</Patch>