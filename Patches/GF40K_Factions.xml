<?xml version="1.0" encoding="utf-8"?>
<Patch>


	<Operation Class="PatchOperationFindMod">
		<mods>
			<li>Warhammer 40.000 - Factions</li>
		</mods>
		<match Class="PatchOperationSequence">
			<operations>
			
				<li Class="PatchOperationReplace">
					<xpath>Defs/PawnKindDef[defName="BEWH_ImperiumGuardman"]/apparelRequired</xpath>
					<value>
						<apparelRequired Inherit="False">
							<li>GF40K_Apparel_Guard_Uniform</li>
						</apparelRequired>
					</value>
				</li>
				<li Class="PatchOperationAdd">
					<xpath>Defs/PawnKindDef[defName="BEWH_ImperiumGuardman"]</xpath>
					<value>
						<apparelColor>(106, 120, 104)</apparelColor>
					</value>
				</li>
				
				<li Class="PatchOperationAdd">
					<xpath>Defs/PawnKindDef[defName="BEWH_ImperiumGuardman"]</xpath>
					<value>
						<specificApparelRequirements>
							<li>
								<requiredTag>GF40K_Uniform</requiredTag>
							</li>
							<li>
								<requiredTag>GF40K_GuardFlakArmor</requiredTag>
							</li>
							<li>
								<requiredTag>GF40K_GuardFlakHelmet</requiredTag>
							</li>
						</specificApparelRequirements>
					</value>
				</li>
			</operations>
		</match>
	</Operation>
</Patch>