<?xml version="1.0" encoding="utf-8" ?>
<Defs>
			<!-- Robo Backpacks -->
	
		<!-- === Robo Backpack (No Arm) === -->
	
	<ThingDef ParentName="ApparelBase">
		<defName>GF40K_Apparel_RoboBackpack</defName>
		<label>robo backpack</label>
		<description>...</description>
		<techLevel>Industrial</techLevel>
		<recipeMaker>
			<unfinishedThingDef>UnfinishedBelt</unfinishedThingDef>
			<useIngredientsForColor>false</useIngredientsForColor>
			<workSpeedStat>GeneralLaborSpeed</workSpeedStat>
			<workSkill>Crafting</workSkill>
			<effectWorking>Smith</effectWorking>
			<soundWorking>Recipe_Smith</soundWorking>
			<recipeUsers>
				<li>TableMachining</li>
			</recipeUsers>
			<researchPrerequisite>GF40K_IA_AdeptusMechanicus</researchPrerequisite> 
		</recipeMaker>
		<graphicData>
			<texPath>Armor/backpack/RoboPack/RoboPack</texPath>
			<graphicClass>Graphic_Single</graphicClass>
            <!--THIS--><shaderType>CutoutComplex</shaderType>
		</graphicData>
		<statBases>
			<WorkToMake>3000</WorkToMake>
			<Mass>1.5</Mass>
			<Flammability>0.4</Flammability>
			<EquipDelay>1</EquipDelay>
			<!--<VEF_RangedCooldownFactor MayRequire="Ludeon.Rimworld.Biotech">0.75</VEF_RangedCooldownFactor>--> <!-- patch this -->
		</statBases>
		<thingCategories>
			<li>ApparelUtility</li>
		</thingCategories>
		<generateAllowChance>0.15</generateAllowChance>
		<apparel>
			<wornGraphicPath>Armor/backpack/RoboPack/RoboPack</wornGraphicPath>
			<careIfWornByCorpse>false</careIfWornByCorpse>
			<careIfDamaged>false</careIfDamaged>
			<countsAsClothingForNudity>false</countsAsClothingForNudity>
			<bodyPartGroups>
				<li>Waist</li>
			</bodyPartGroups>
			<layers>
				<li>Belt</li>
			</layers>
			<wornGraphicData>
				<renderUtilityAsPack>true</renderUtilityAsPack>
				<north>
					<offset>(0.005, 0)</offset> <!-- literally 2 pixels off center  (╯°□°)╯︵ ┻━┻     -->
				</north>
				<south>
					<offset>(0.005, 0)</offset>
				</south>
			</wornGraphicData>
			<!--2--><useWornGraphicMask>true</useWornGraphicMask>
		</apparel>
		
		<costList>
			<Steel>30</Steel>
			<ComponentIndustrial>1</ComponentIndustrial>
		</costList>
		<equippedStatOffsets>
			<RangedCooldownFactor MayRequire="Ludeon.Rimworld.Biotech">0.75</RangedCooldownFactor>  <!-- unpatch this when vef active -->
		</equippedStatOffsets>
		
		<!--3-->
		<thingClass>ThingColor.ApparelColored</thingClass>
		<modExtensions>
			<li Class="ThingColor.ThingExtension">
				<colorOneStuff>
					<li>Metallic</li>
				</colorOneStuff>
				<colorTwoStuff>
					<li>Fabric</li>
					<li>Leathery</li>
				</colorTwoStuff>
			</li>
		</modExtensions>
		<colorGenerator IsNull="True"/>
	</ThingDef>
	
	
	
		<!-- === Robo Backpack (Yes Arm) === -->
	
	<ThingDef ParentName="ApparelBase">
		<defName>GF40K_Apparel_RoboBackpackArm</defName>
		<label>robo backpack (arm)</label>
		<description>...</description>
		<techLevel>Industrial</techLevel>
		<recipeMaker>
			<unfinishedThingDef>UnfinishedBelt</unfinishedThingDef>
			<useIngredientsForColor>false</useIngredientsForColor>
			<workSpeedStat>GeneralLaborSpeed</workSpeedStat>
			<workSkill>Crafting</workSkill>
			<effectWorking>Smith</effectWorking>
			<soundWorking>Recipe_Smith</soundWorking>
			<recipeUsers>
				<li>TableMachining</li>
			</recipeUsers>
			<researchPrerequisite>GF40K_IA_AdeptusMechanicus</researchPrerequisite> 
		</recipeMaker>
		<graphicData>
			<texPath>Armor/backpack/RoboPackArm/RoboPackArm</texPath>
			<graphicClass>Graphic_Single</graphicClass>
            <!--THIS--><shaderType>CutoutComplex</shaderType>
		</graphicData>
		<statBases>
			<WorkToMake>3000</WorkToMake>
			<Mass>1.5</Mass>
			<Flammability>0.4</Flammability>
			<EquipDelay>1</EquipDelay>
		</statBases>
		<thingCategories>
			<li>ApparelUtility</li>
		</thingCategories>
		<generateAllowChance>0.15</generateAllowChance>
		<apparel>
			<wornGraphicPath>Armor/backpack/RoboPackArm/RoboPackArm</wornGraphicPath>
			<careIfWornByCorpse>false</careIfWornByCorpse>
			<careIfDamaged>false</careIfDamaged>
			<countsAsClothingForNudity>false</countsAsClothingForNudity>
			<bodyPartGroups>
				<li>Waist</li>
			</bodyPartGroups>
			<layers>
				<li>Belt</li>
			</layers>
			<wornGraphicData>
				<renderUtilityAsPack>true</renderUtilityAsPack>
				<north>
					<offset>(0.3275, 0.25)</offset> <!-- still off center, but it's barely noticeable -->
				</north>
				<south>
					<offset>(0.3275, 0.25)</offset>
				</south>
				<east>
					<offset>(0.1, 0.25)</offset>
				</east>
			</wornGraphicData>
			<!--2--><useWornGraphicMask>true</useWornGraphicMask>
		</apparel>
		
		<equippedStatOffsets>
			<FixBrokenDownBuildingSuccessChance>0.1</FixBrokenDownBuildingSuccessChance>
			<ConstructionSpeed>0.15</ConstructionSpeed>
			<ConstructSuccessChance>0.1</ConstructSuccessChance>
			<SmoothingSpeed>0.1</SmoothingSpeed>
		</equippedStatOffsets>
		
		<costList>
			<Steel>30</Steel>
			<ComponentIndustrial>1</ComponentIndustrial>
		</costList>
		
		<!--3-->
		<thingClass>ThingColor.ApparelColored</thingClass>
		<modExtensions>
			<li Class="ThingColor.ThingExtension">
				<colorOneStuff>
					<li>Metallic</li>
				</colorOneStuff>
				<colorTwoStuff>
					<li>Fabric</li>
					<li>Leathery</li>
				</colorTwoStuff>
			</li>
		</modExtensions>
		<colorGenerator IsNull="True"/>
	</ThingDef>
	

</Defs>
